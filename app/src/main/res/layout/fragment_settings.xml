<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="20sp"
        android:id="@+id/RG"
        tools:ignore="MissingConstraints">

        <me.omidh.liquidradiobutton.LiquidRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:id="@+id/rdb0"
            android:layout_marginBottom="20sp"
            android:layoutDirection="rtl"
            android:minWidth="40sp"
            android:minHeight="40sp"
            android:text="بدون نافذة بداية"
            android:textSize="30sp"

            app:lrb_explodeCount="3"
            android:textColor="@color/colorPrimaryDark"
            app:lrb_checkedColor="@color/colorPrimary"
            app:lrb_unCheckedColor="@android:color/darker_gray"
            />
        <me.omidh.liquidradiobutton.LiquidRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:id="@+id/rdb1"
            android:minWidth="40sp"
            android:minHeight="40sp"
            android:layoutDirection="rtl"
            android:text="نافذة بداية عادية"
            android:textSize="30sp"
            app:lrb_explodeCount="3"
            android:textColor="@color/colorPrimaryDark"
            app:lrb_checkedColor="@color/colorPrimary"
            app:lrb_unCheckedColor="@android:color/darker_gray"
            />
        <me.omidh.liquidradiobutton.LiquidRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:id="@+id/rdb2"
            android:minWidth="40sp"
            android:minHeight="40sp"
            android:layoutDirection="rtl"
            android:text="نافذة بداية صارخة"
            android:textSize="30sp"
            app:lrb_explodeCount="3"
            android:textColor="@color/colorPrimaryDark"
            app:lrb_checkedColor="@color/colorPrimary"
            app:lrb_unCheckedColor="@android:color/darker_gray"
            />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>